<table class="table">
  <thead>
    <tr>
      <td>商品項目</td>
      <td>單價</td>
      <td>數量</td>
      <td>小計</td>
    </tr>
  </thead>
  <tbody>
    <% cart.items.each do |item| %>
    <tr>
      <td><%= item.product.title %></td>
      <td><%= item.product.price %></td>
      <td><%= item.quantity %></td>
      <td><%= item.price %></td>
    </tr>
    <% end %>
  </tbody>
  <tfood>
    <tr>
      <td colspan="3" align="right">未稅價</td>
      <td><%= cart.total_price_without_tax %></td>
    </tr>
    <tr>
      <td colspan="3" align="right">5% 營業稅</td>
      <td><%= cart.tax %></td>
    </tr>
    <tr>
      <td colspan="3" align="right">總價</td>
      <td><%= cart.total_price %></td>
    </tr>
  </tfood>
</table>
